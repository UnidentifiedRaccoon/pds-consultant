# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Webhook Security
# Секретный ключ для webhook (минимум 8 символов)
WEBHOOK_SECRET=your_webhook_secret_here

# Server Configuration
# Порт для локальной разработки
DEV_PORT=8080

# Production Configuration
# Публичный URL для продакшн (например, https://yourdomain.com)
# Оставьте пустым для локальной разработки
PUBLIC_BASE_URL=

# Logging (optional)
# Уровень логирования: debug, info, warn, error
# LOG_LEVEL=info

# Yandex Cloud LLM (для консультаций)
YC_API_KEY=your_yc_api_key_here
YC_FOLDER_ID=your_folder_id_here
YC_GPT_MODEL=yandexgpt/latest
YC_GPT_ENDPOINT=https://llm.api.cloud.yandex.net/foundationModels/v1/completion
