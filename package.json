{
  "name": "pds-consultant",
  "version": "1.0.0",
  "description": "Простой Telegram бот-консультант по ПДС с двумя основными функциями: рассчитать и узнать о ПДС.",
  "main": "dist/src/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/index.js",
    "start:dev": "NODE_ENV=development tsx src/index.ts",
    "dev": "tsx scripts/dev-with-localtunnel.ts",
    "dev:server": "npx nodemon --exec tsx src/index.ts",
    "webhook:set": "tsx scripts/webhook-manager.ts set",
    "webhook:info": "tsx scripts/webhook-manager.ts info",
    "webhook:delete": "tsx scripts/webhook-manager.ts delete",
    "lint": "eslint . --ext .js,.mjs,.cjs,.ts,.mts,.cts --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.mjs,.cjs,.ts,.mts,.cts --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/dotenv-safe": "9.1.0",
    "@types/fs-extra": "11.0.4",
    "@types/node": "24.8.1",
    "@typescript-eslint/eslint-plugin": "8.46.1",
    "@typescript-eslint/parser": "8.46.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-n": "16.6.2",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-promise": "6.1.1",
    "husky": "9.1.7",
    "lint-staged": "15.5.2",
    "nodemon": "3.1.10",
    "prettier": "3.3.3",
    "ts-node": "10.9.2",
    "tsx": "4.20.6",
    "typescript": "5.9.3"
  },
  "packageManager": "npm@10.2.3",
  "engines": {
    "node": "20.10.0",
    "npm": "10.2.3"
  },
  "dependencies": {
    "@grammyjs/conversations": "2.1.0",
    "dotenv-safe": "9.1.0",
    "envalid": "8.1.0",
    "fastify": "4.28.1",
    "fs-extra": "11.2.0",
    "grammy": "1.38.3",
    "pino": "8.17.0",
    "playwright": "1.48.0"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,ts,mts,cts}": [
      "eslint --max-warnings 0",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html}": [
      "prettier --write"
    ]
  }
}
