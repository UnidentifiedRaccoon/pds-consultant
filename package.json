{
  "name": "pds-consultant",
  "version": "1.0.0",
  "description": "Простой Telegram бот-консультант по ПДС с двумя основными функциями: рассчитать и узнать о ПДС.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "start:dev": "NODE_ENV=development node src/index.js",
    "dev": "node scripts/dev-with-localtunnel.mjs",
    "dev:server": "npx nodemon src/index.js",
    "webhook:set": "node scripts/webhook-manager.mjs set",
    "webhook:info": "node scripts/webhook-manager.mjs info",
    "webhook:delete": "node scripts/webhook-manager.mjs delete",
    "lint": "eslint . --ext .js,.mjs,.cjs --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.mjs,.cjs --fix",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-n": "16.6.2",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-promise": "6.1.1",
    "husky": "9.1.7",
    "lint-staged": "15.5.2",
    "nodemon": "3.1.10",
    "prettier": "3.3.3"
  },
  "packageManager": "npm@10.2.3",
  "engines": {
    "node": "20.10.0",
    "npm": "10.2.3"
  },
  "dependencies": {
    "dotenv-safe": "9.1.0",
    "envalid": "8.1.0",
    "fastify": "4.28.1",
    "fs-extra": "11.2.0",
    "node-telegram-bot-api": "0.64.0",
    "pino": "8.17.0",
    "playwright": "1.48.0"
  },
  "lint-staged": {
    "*.{js,mjs,cjs}": [
      "eslint --max-warnings 0",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html}": [
      "prettier --write"
    ]
  }
}
